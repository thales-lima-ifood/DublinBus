<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingEnd="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingStart="8dp">

    <TextView
        android:id="@+id/real_route_view"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/frame_top_divider_light"
        android:drawableLeft="@drawable/ic_bus_black_18dp"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="27"
        android:textColor="@color/primary_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/real_route_description_view"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/real_route_view"
        android:layout_toLeftOf="@+id/live_blip"
        android:layout_toRightOf="@+id/real_route_view"
        android:layout_toStartOf="@+id/live_blip"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:maxLines="1"
        android:text="Terminal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/secondary_text"
        app:layout_constraintBottom_toBottomOf="@+id/real_route_view"
        app:layout_constraintEnd_toStartOf="@+id/live_blip"
        app:layout_constraintStart_toEndOf="@+id/real_route_view"
        app:layout_constraintTop_toTopOf="@+id/real_route_view" />

    <TextView
        android:id="@+id/real_route_time_view"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif"
        android:text="6 min"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/real_route_description_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/real_route_description_view" />


    <ImageView
        android:id="@+id/live_blip"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toStartOf="@+id/real_route_time_view"
        app:layout_constraintTop_toTopOf="@+id/real_route_time_view" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/real_route_view" />
</android.support.constraint.ConstraintLayout>