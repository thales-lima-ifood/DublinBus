<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/frame_medium"
    android:elevation="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="8dp">

    <TextView
        android:id="@+id/detail_map_description_aux_view"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/frame_round_border"
        android:drawableTop="@drawable/ic_bus_symbol_black_24dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:paddingTop="7dp"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/route_detail_serving_aux_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/detail_map_description_view"
        tools:text="1234" />

    <TextView
        android:id="@+id/detail_map_description_view"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/primary_text"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/detail_map_description_aux_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Connell St, Parnell Street" />

    <TextView
        android:id="@+id/route_detail_time_aux_view"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:drawableLeft="@drawable/ic_directions_walk_black_18dp"
        android:drawablePadding="2dp"
        android:drawableStart="@drawable/ic_directions_walk_black_18dp"
        android:fontFamily="sans-serif-light"
        android:text="7 min"
        android:textColor="@color/secondary_text"
        app:layout_constraintStart_toEndOf="@+id/detail_map_description_aux_view"
        app:layout_constraintTop_toBottomOf="@+id/detail_map_description_view" />

    <TextView
        android:id="@+id/route_detail_serving_aux_view"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-light"
        android:text="Routes: 4, 7, 7a, 7d, 40b, 40d, 120"
        android:textColor="@color/secondary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/detail_map_description_aux_view"
        app:layout_constraintTop_toBottomOf="@+id/route_detail_time_aux_view" />

    <View
        android:id="@+id/route_detail_divider_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@+id/route_detail_serving_aux_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/route_detail_divider_view">

        <include layout="@layout/real_time_include" />

        <include layout="@layout/real_time_include" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>